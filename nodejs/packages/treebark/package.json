{
  "name": "treebark",
  "version": "1.0.0",
  "description": "Safe HTML tree structures for Markdown and content-driven apps",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run build:browser && npm run copy:browser",
    "build:browser": "vite build --config vite.browser.config.ts",
    "build:vite": "vite build",
    "copy:browser": "mkdir -p ../../docs/assets && cp browser/treebark-browser.js ../../docs/assets/treebark-browser.js",
    "clean": "rm -rf dist browser",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "markdown",
    "template",
    "safe",
    "html",
    "tree",
    "schema"
  ],
  "author": "Dan Marshall",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}