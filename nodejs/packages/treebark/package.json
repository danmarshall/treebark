{
  "name": "treebark",
  "version": "1.0.0",
  "description": "Safe HTML tree structures for Markdown and content-driven apps",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "vite build",
    "build:all": "npm run build && npm run build:browser",
    "dev": "vite",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build:all"
  },
  "keywords": [
    "markdown",
    "template",
    "safe",
    "html",
    "tree",
    "schema"
  ],
  "author": "Dan Marshall",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "vite": "^7.1.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
